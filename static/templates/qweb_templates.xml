    <!-- Generic Form Template -->
    <t t-name="common.form">
        <form class="needs-validation" novalidate="true" t-on-submit="handleSubmit">
            <t t-foreach="fields" t-as="field">
                <div class="mb-3">
                    <label t-att-for="field.name" class="form-label" t-esc="field.label"/>
                    <t t-if="field.type == 'text'">
                        <input type="text" class="form-control" t-att-name="field.name" t-att-required="field.required"/>
                    </t>
                    <t t-elif="field.type == 'email'">
                        <input type="email" class="form-control" t-att-name="field.name" t-att-required="field.required"/>
                    </t>
                    <t t-elif="field.type == 'number'">
                        <input type="number" class="form-control" t-att-name="field.name" t-att-required="field.required"/>
                    </t>
                    <t t-elif="field.type == 'select'">
                        <select class="form-select" t-att-name="field.name" t-att-required="field.required">
                            <option value="">ÿßÿÆÿ™ÿ±...</option>
                            <t t-foreach="field.options" t-as="option">
                                <option t-att-value="option.value" t-esc="option.label"/>
                            </t>
                        </select>
                    </t>
                    <t t-elif="field.type == 'textarea'">
                        <textarea class="form-control" t-att-name="field.name" rows="3" t-att-required="field.required"/>
                    </t>
                </div>
            </t>
            <div class="d-flex justify-content-end gap-2">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ÿ•ŸÑÿ∫ÿßÿ°</button>
                <button type="submit" class="btn btn-primary">ÿ≠ŸÅÿ∏</button>
            </div>
        </form>
